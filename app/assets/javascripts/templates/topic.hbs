<h2>reply</h2>
<form {{action 'create' on="submit"}}>
  {{#if isSaving}}
    <p>saving post...</p>
  {{/if}}
  <p>{{input type="text" value=name}}</p>
  <p>{{textarea value=body}}</p>
  <p>{{view Fortchan12.UploadFile name="photo" file=photo}}</p>
  <button type="submit">Create</button>
</form>

{{#each post in posts}}
  {{format-date post.createdAt}}
  {{post.name}} says
  {{post.body}}
  <a {{bind-attr href="post.photo_url"}}><img {{bind-attr src="post.photo_thumb_url"}} /></a>
  {{post.created_at}}
  <br />
{{/each}}
